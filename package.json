{
  "name": "@dharayush7/fireclass",
  "version": "0.2.12",
  "description": "A minimal, type-safe Firestore model helper** for Node.js with first-class integration** for class-validator and class-transformer.Provides base models, typed CRUD, declarative collection mapping, and strong query builders",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dharayush7/fireclass.git"
  },
  "homepage": "https://github.com/dharayush7/fireclass",
  "bugs": {
    "url": "https://github.com/dharayush7/fireclass/issues"
  },
  "keywords": [
    "firestore",
    "firebase",
    "firebase-admin",
    "class-validator",
    "class-transformer",
    "orm",
    "model",
    "typescript",
    "type-safe",
    "validation",
    "decorator",
    "crud",
    "database",
    "nosql",
    "firestore-orm",
    "firestore-model",
    "query-builder",
    "data-modeling",
    "schema",
    "entity",
    "repository",
    "nodejs",
    "server-side"
  ],
  "author": {
    "name": "Ayush Dhar",
    "email": "contact@ayushdhar.com",
    "url": "https://github.com/dharayush07",
    "portfolio": "https://www.ayushdhar.com"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/core/index.ts src/decorators/index.ts src/types/index.ts --format esm,cjs --dts --out-dir dist"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "firebase-admin": "^13.6.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.cjs"
    },
    "./decorators": {
      "types": "./dist/decorators/index.d.ts",
      "import": "./dist/decorators/index.js",
      "require": "./dist/decorators/index.cjs"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "core": [
        "./dist/core/index.d.ts"
      ],
      "decorators": [
        "./dist/decorators/index.d.ts"
      ],
      "types": [
        "./dist/types/index.d.ts"
      ]
    }
  }
}
